pipeline {
  agent any

  stages {
    stage('Print Jenkins Credentials') {
      steps {
        withCredentials([
          // Secret text
          string(credentialsId: 'POSTGRES_AUTH_USER',       variable: 'POSTGRES_AUTH_USER'),
