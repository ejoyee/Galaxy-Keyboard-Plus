pipeline {
  agent any

  environment {
    FIREBASE_TOKEN      = credentials('FIREBASE_TOKEN')
    FIREBASE_APP_ID     = '1:189536895445:android:783ed885fd7c4b896bfd5c'
    KEYSTORE_PASSWORD   = credentials('KEYSTORE_PASSWORD')
    KEY_ALIAS           = credentials('KEY_ALIAS')
    KEY_PASSWORD        = credentials('KEY_PASSWORD')
    DOCKER_IMAGE        = 'cimg/android:2023.08'
    WORK_DIR            = "${WORKSPACE}/workspace"
    TAR_PATH            = "${WORKSPACE}/workspace.tar.gz"
    APK_DIR             = "${WORKSPACE}/apk"
    ARCHIVE_DIR         = "${WORKSPACE}/apk-archive"
  }

  stages {
    stage('Checkout & Init') {
      steps {
        checkout scm
        sh '''
          echo "📁 GitLab 프로젝트 전체 권한 변경"
          chmod -R 777 .
        '''
      }
    }

    stage('Prepare Project') {
      steps {
        sh '''
          echo "📦 작업 디렉토리 준비 및 아카이브 생성"
          rm -rf ${WORK_DIR} ${TAR_PATH}
          mkdir -p ${WORK_DIR}
          cp -a front/frontend/. ${WORK_DIR}/
          chmod -R 777 ${WORK_DIR}

          echo "📄 package.json 존재 확인:"
          ls -l ${WORK_DIR}/package.json || { echo "❌ package.json 없음"; exit 1; }

          echo "📦 .tar.gz 생성"
          tar -czf ${TAR_PATH} -C ${WORK_DIR} .
          echo "📦 아카이브 생성 완료: ${TAR_PATH}"

          echo "📊 생성된 tar 파일 정보:"
          ls -lh ${TAR_PATH} || echo "❌ tar 파일 없음"
          file ${TAR_PATH} || echo "❌ file 명령 실패"
          stat ${TAR_PATH} || echo "❌ stat 명령 실패"
        '''
      }
    }

    stage('Prepare Secrets') {
      steps {
        withCredentials([
          file(credentialsId: 'android-release-keystore', variable: 'KEYSTORE_FILE'),
          file(credentialsId: 'google-services-json', variable: 'GOOGLE_SERVICES_JSON'),
          file(credentialsId: 'firebase-service-account', variable: 'FIREBASE_SERVICE_ACCOUNT')
        ]) {
          sh '''
            echo "🔐 시크릿 파일 복사 및 권한 설정"
            mkdir -p ${WORK_DIR}/android/app/keystore
            cp "$KEYSTORE_FILE" ${WORK_DIR}/android/app/keystore/release.keystore
            cp "$GOOGLE_SERVICES_JSON" ${WORK_DIR}/android/app/google-services.json
            cp "$FIREBASE_SERVICE_ACCOUNT" ${WORK_DIR}/android/firebase_service_account.json
            chmod -R 777 ${WORK_DIR}/android
          '''
        }
      }
    }

    stage('Build and Deploy') {
      steps {
        sh '''
          echo "🚀 Docker 빌드 및 Firebase 배포 시작"

          echo "🧪 Docker 마운트 전 아카이브 상태 확인"
          ls -lh "${TAR_PATH}"
          file "${TAR_PATH}"
          stat "${TAR_PATH}"

          docker run --rm \
            -v "${TAR_PATH}:/workspace.tar.gz" \
            -e FIREBASE_TOKEN="${FIREBASE_TOKEN}" \
            -e FIREBASE_APP_ID="${FIREBASE_APP_ID}" \
            ${DOCKER_IMAGE} \
            bash -c '
              set -e

              echo "📦 컨테이너 내부 /workspace.tar.gz 상태 확인"
              file /workspace.tar.gz || echo "❌ file 확인 실패"
              ls -lh /workspace.tar.gz || echo "❌ 파일 존재 안 함"
              stat /workspace.tar.gz || echo "❌ stat 실패"

              if [ -d /workspace.tar.gz ]; then
                echo "❌ /workspace.tar.gz 는 디렉토리입니다! 잘못된 마운트"
                exit 1
              fi

              echo "📂 /tmp/project 생성 및 압축 해제 시도"
              mkdir -p /tmp/project
              tar -xzf /workspace.tar.gz -C /tmp/project || { echo "❌ tar 추출 실패"; exit 1; }

              echo "📁 추출 후 디렉토리 상태:"
              ls -al /tmp/project || echo "❌ 디렉토리 없음"
              cd /tmp/project

              echo "📦 npm install 시작"
              npm install || { echo "❌ npm install 실패"; exit 1; }

              cd android
              chmod +x ./gradlew
              echo "sdk.dir=$ANDROID_HOME" > local.properties
              echo "KEYSTORE_PASSWORD=${KEYSTORE_PASSWORD}" >> gradle.properties
              echo "KEY_ALIAS=${KEY_ALIAS}" >> gradle.properties
              echo "KEY_PASSWORD=${KEY_PASSWORD}" >> gradle.properties

              echo "🛠️ Gradle 빌드 시작"
              ./gradlew clean assembleRelease --stacktrace || { echo "❌ Gradle 빌드 실패"; exit 1; }

              echo "📁 빌드 산출물 복사"
              mkdir -p /tmp/output
              find . -name "*.apk" -o -name "*.aab" -exec cp {} /tmp/output/ \\;

              echo "🔥 Firebase CLI 설치 및 배포 시작"
              npm install -g firebase-tools || { echo "❌ Firebase CLI 설치 실패"; exit 1; }

              ls -lh /tmp/output/
              firebase appdistribution:distribute /tmp/output/*.apk \
                --app "$FIREBASE_APP_ID" \
                --token "$FIREBASE_TOKEN" \
                --groups "testers" \
                --release-notes "CI 자동 배포 #${BUILD_ID}" || { echo "❌ Firebase 배포 실패"; exit 1; }

              echo "✅ Firebase 배포 완료"
            '

          echo "📦 결과 복사"
          mkdir -p ${ARCHIVE_DIR}
          cp -v ${APK_DIR}/*.apk ${ARCHIVE_DIR}/ || echo "⚠️ APK 파일 없음"
        '''
        archiveArtifacts artifacts: 'apk-archive/**', fingerprint: true, allowEmptyArchive: true
      }
    }
  }

  post {
    success {
      echo '✅ 빌드 및 배포 성공 🎉'
    }
    failure {
      sh '''
        echo "❌ 빌드 실패, 디버깅 로그 수집 시작"
        mkdir -p debug-archive
        echo "## package.json 내용" > debug-archive/info.txt
        cat ${WORK_DIR}/package.json >> debug-archive/info.txt 2>/dev/null || echo "package.json 없음" >> debug-archive/info.txt

        echo "## .tar.gz 상태" >> debug-archive/info.txt
        file ${TAR_PATH} >> debug-archive/info.txt 2>/dev/null || echo "file 실패" >> debug-archive/info.txt
        stat ${TAR_PATH} >> debug-archive/info.txt 2>/dev/null || echo "stat 실패" >> debug-archive/info.txt
      '''
      archiveArtifacts artifacts: 'debug-archive/**', fingerprint: true, allowEmptyArchive: true
    }
    always {
      cleanWs()
    }
  }
}
