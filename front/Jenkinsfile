pipeline {
  agent any

  environment {
    // Firebase ë°°í¬ ì •ë³´
    FIREBASE_TOKEN   = credentials('FIREBASE_TOKEN')
    FIREBASE_APP_ID  = '1:189536895445:android:783ed885fd7c4b896bfd5c'
    // í‚¤ìŠ¤í† ì–´ ê´€ë ¨ ì„¤ì •
    KEYSTORE_PASSWORD = credentials('KEYSTORE_PASSWORD')
    KEY_ALIAS        = credentials('KEY_ALIAS')
    KEY_PASSWORD     = credentials('KEY_PASSWORD')
    // ì‚¬ìš©í•  Docker ì´ë¯¸ì§€
    DOCKER_IMAGE     = 'my-android-ci:latest'
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
        
        // ë¹Œë“œ ì‹œì‘ ë¡œê·¸
        sh '''
          echo "===================================================="
          echo "ğŸš€ ë¹Œë“œ ì‹œì‘: $(date '+%Y-%m-%d %H:%M:%S')"
          echo "ğŸ” ë¹Œë“œ ID: ${BUILD_ID}"
          echo "ğŸ” Git ì»¤ë°‹: ${GIT_COMMIT}"
          echo "ğŸ” ë¸Œëœì¹˜: ${GIT_BRANCH}"
          echo "===================================================="
        '''
      }
    }

    stage('Prepare Build Environment') {
      steps {
        sh '''
          echo "===================================================="
          echo "ğŸ”§ ë¹Œë“œ í™˜ê²½ ì¤€ë¹„"
          echo "===================================================="
          
          # ì„ì‹œ ì‘ì—… ë””ë ‰í† ë¦¬ ìƒì„±
          rm -rf _build_tmp
          mkdir -p _build_tmp
          
          # í”„ë¡œì íŠ¸ íŒŒì¼ ë³µì‚¬
          echo "ğŸ“‚ í”„ë¡œì íŠ¸ íŒŒì¼ ë³µì‚¬"
          cp -r front/frontend/* _build_tmp/
          
          # .git ë””ë ‰í† ë¦¬ ì œì™¸ (ë¶ˆí•„ìš”í•œ íŒŒì¼ ì œì™¸)
          rm -rf _build_tmp/.git
          
          # ê¶Œí•œ ì„¤ì • (ëª¨ë“  ì‚¬ìš©ìê°€ ì½ê³  ì“¸ ìˆ˜ ìˆë„ë¡)
          chmod -R 777 _build_tmp
          
          echo "===================================================="
        '''
      }
    }

    stage('Prepare Secret Files') {
      steps {
        withCredentials([
          file(credentialsId: 'android-release-keystore', variable: 'KEYSTORE_FILE'),
          file(credentialsId: 'google-services-json', variable: 'GOOGLE_SERVICES_JSON'),
          file(credentialsId: 'firebase-service-account', variable: 'FIREBASE_SERVICE_ACCOUNT')
        ]) {
          sh '''
            echo "===================================================="
            echo "ğŸ” ì‹œí¬ë¦¿ íŒŒì¼ ì¤€ë¹„"
            echo "===================================================="
            
            # ë””ë ‰í† ë¦¬ ìƒì„±
            mkdir -p _build_tmp/android/app/keystore
            
            # ì‹œí¬ë¦¿ íŒŒì¼ ë³µì‚¬
            cp "$FIREBASE_SERVICE_ACCOUNT" _build_tmp/android/firebase_service_account.json
            cp "$GOOGLE_SERVICES_JSON" _build_tmp/android/app/google-services.json
            cp "$KEYSTORE_FILE" _build_tmp/android/app/keystore/release.keystore
            
            # ê¶Œí•œ ì„¤ì •
            chmod -R 777 _build_tmp/android/app/keystore
            chmod 666 _build_tmp/android/firebase_service_account.json
            chmod 666 _build_tmp/android/app/google-services.json
            chmod 666 _build_tmp/android/app/keystore/release.keystore
            
            echo "===================================================="
          '''
        }
      }
    }

    stage('Build in Docker') {
      steps {
        sh '''
          echo "===================================================="
          echo "ğŸš€ Docker ë‚´ë¶€ì—ì„œ ë¹Œë“œ ì‹¤í–‰"
          echo "===================================================="
          
          # Docker ì»¨í…Œì´ë„ˆ ì‹¤í–‰
          docker run --rm \
            -v "$(pwd)/_build_tmp:/project" \
            --workdir /project \
            --entrypoint bash \
            ${DOCKER_IMAGE} \
            -c '
              set -e  # ì—ëŸ¬ ë°œìƒ ì‹œ ì¦‰ì‹œ ìŠ¤í¬ë¦½íŠ¸ ì¤‘ë‹¨
              
              echo "ğŸ“‚ í˜„ì¬ ë””ë ‰í† ë¦¬: $(pwd)"
              ls -la
              
              echo "ğŸ“¦ Node.js ì¢…ì†ì„± ì„¤ì¹˜"
              npm install
              
              echo "ğŸ“‚ node_modules ì„¤ì¹˜ í™•ì¸"
              ls -la node_modules/@react-native || echo "React Native ëª¨ë“ˆì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤"
              
              echo "ğŸ”§ Android ë¹Œë“œ ì¤€ë¹„"
              cd android
              chmod +x ./gradlew
              
              echo "ğŸ”§ local.properties ìƒì„±"
              echo "sdk.dir=/opt/android-sdk" > local.properties
              
              echo "ğŸ”§ Gradle í”„ë¡œí¼í‹° ì„¤ì •"
              cat >> gradle.properties << EOF

# CI í™˜ê²½ í‚¤ìŠ¤í† ì–´ ì„¤ì •
KEYSTORE_PASSWORD='$KEYSTORE_PASSWORD'
KEY_ALIAS='$KEY_ALIAS'
KEY_PASSWORD='$KEY_PASSWORD'
EOF
              
              echo "ğŸ”§ Android SDK í™•ì¸"
              ls -la $ANDROID_SDK_ROOT || echo "Android SDK ë””ë ‰í† ë¦¬ê°€ ì—†ìŠµë‹ˆë‹¤"
              
              echo "ğŸ”§ Gradle ë¹Œë“œ ì‹¤í–‰"
              ./gradlew clean --stacktrace
              ./gradlew assembleDebug --stacktrace
              
              echo "ğŸ”§ ë¹Œë“œ ê²°ê³¼ í™•ì¸"
              find . -name "*.apk" || echo "APK íŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤"
            '
          
          # ë¹Œë“œ ê²°ê³¼ ë””ë ‰í† ë¦¬ ìƒì„±
          mkdir -p apk
          
          # APK íŒŒì¼ ì°¾ê¸° ë° ë³µì‚¬ (ë°±ìŠ¬ë˜ì‹œ ì—†ì´ xargs ì‚¬ìš©)
          echo "ğŸ” APK íŒŒì¼ ê²€ìƒ‰"
          find _build_tmp/android -name "*.apk" | xargs -I {} cp {} apk/ || echo "APK íŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤"
          
          echo "===================================================="
        '''
      }
    }

    stage('Archive APK') {
      steps {
        sh '''
          echo "===================================================="
          echo "ğŸ“¦ APK ì•„ì¹´ì´ë¸Œ"
          echo "===================================================="
          
          mkdir -p apk-archive
          
          # APK íŒŒì¼ ì°¾ê¸° ë° ë³µì‚¬ (ë°±ìŠ¬ë˜ì‹œ ì—†ì´ xargs ì‚¬ìš©)
          find apk -name "*.apk" | xargs -I {} cp {} apk-archive/ || echo "APK íŒŒì¼ì´ ì—†ìŠµë‹ˆë‹¤"
          
          # ê²°ê³¼ í™•ì¸
          APK_COUNT=$(find apk-archive -name "*.apk" | wc -l)
          
          if [ "$APK_COUNT" -gt 0 ]; then
            echo "âœ… $APK_COUNT ê°œì˜ APK íŒŒì¼ì´ ìˆìŠµë‹ˆë‹¤:"
            find apk-archive -name "*.apk" | xargs ls -la
          else
            echo "âŒ APK íŒŒì¼ì´ ì—†ìŠµë‹ˆë‹¤"
            echo "No APK files found" > apk-archive/build-failed.txt
          fi
          
          echo "===================================================="
        '''
        
        archiveArtifacts artifacts: 'apk-archive/**', fingerprint: true, allowEmptyArchive: true
      }
    }

    stage('Deploy to Firebase') {
      steps {
        withCredentials([
          string(credentialsId: 'FIREBASE_TOKEN', variable: 'FIREBASE_TOKEN')
        ]) {
          sh '''
            echo "===================================================="
            echo "ğŸ”¥ Firebase ë°°í¬"
            echo "===================================================="
            
            # APK íŒŒì¼ ì°¾ê¸°
            APK_FILE=$(find "$(pwd)/apk-archive" -name "*.apk" | head -1)
            
            if [ -z "$APK_FILE" ]; then
              echo "âŒ APK íŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ì–´ Firebase ë°°í¬ë¥¼ ê±´ë„ˆëœë‹ˆë‹¤"
              exit 0
            fi
            
            echo "âœ… ì—…ë¡œë“œí•  APK íŒŒì¼: $APK_FILE"
            
            # Firebase ë°°í¬ ì‹¤í–‰
            docker run --rm \
              -v "$(pwd):/firebase_workspace" \
              -v "$(pwd)/_build_tmp/android:/app_android" \
              -w /app_android \
              -e FIREBASE_TOKEN="$FIREBASE_TOKEN" \
              -e FIREBASE_APP_ID="$FIREBASE_APP_ID" \
              ${DOCKER_IMAGE} \
              bash -c '
                export GEM_HOME=/root/.gem
                export PATH=$PATH:$GEM_HOME/bin
                
                # Fastlane ì„¤ì¹˜ í™•ì¸
                bundle --version || gem install bundler
                
                # Fastlaneìœ¼ë¡œ ë°°í¬
                bundle config set path "vendor/bundle"
                bundle install
                
                echo "ğŸ”¥ Firebase App Distribution ì‹¤í–‰"
                bundle exec fastlane run firebase_app_distribution \
                  app:"$FIREBASE_APP_ID" \
                  firebase_cli_token:"$FIREBASE_TOKEN" \
                  apk_path:"/firebase_workspace/'"$APK_FILE"'" \
                  groups:"testers" \
                  release_notes:"Jenkins CI ìë™ ë°°í¬ ë¹Œë“œ #${BUILD_ID} (${GIT_COMMIT})"
              '
            
            echo "===================================================="
          '''
        }
      }
    }
  }

  post {
    success {
      sh '''
        echo "===================================================="
        echo "âœ… Frontend CI/CD ì„±ê³µ ğŸ‰"
        echo "===================================================="
      '''
    }
    failure {
      sh '''
        echo "===================================================="
        echo "âŒ Frontend CI/CD ì‹¤íŒ¨ â—"
        echo "===================================================="
        
        # ë””ë²„ê¹… ì •ë³´ ìˆ˜ì§‘
        echo "# ë¹Œë“œ ì‹¤íŒ¨ ë””ë²„ê¹… ì •ë³´" > debug-info.md
        echo "" >> debug-info.md
        
        echo "## ë¹Œë“œ ë””ë ‰í† ë¦¬ ì •ë³´" >> debug-info.md
        ls -la _build_tmp 2>/dev/null >> debug-info.md || echo "ë¹Œë“œ ë””ë ‰í† ë¦¬ê°€ ì—†ìŠµë‹ˆë‹¤" >> debug-info.md
        echo "" >> debug-info.md
        
        echo "## node_modules ì •ë³´" >> debug-info.md
        ls -la _build_tmp/node_modules 2>/dev/null >> debug-info.md || echo "node_modules ë””ë ‰í† ë¦¬ê°€ ì—†ìŠµë‹ˆë‹¤" >> debug-info.md
        echo "" >> debug-info.md
        
        echo "## Android ë””ë ‰í† ë¦¬ ì •ë³´" >> debug-info.md
        ls -la _build_tmp/android 2>/dev/null >> debug-info.md || echo "ì•ˆë“œë¡œì´ë“œ ë””ë ‰í† ë¦¬ê°€ ì—†ìŠµë‹ˆë‹¤" >> debug-info.md
        echo "" >> debug-info.md
        
        # ë””ë²„ê¹… ì •ë³´ ì•„ì¹´ì´ë¸Œ
        mkdir -p debug-archive
        cp debug-info.md debug-archive/
        
        echo "ğŸ“¦ ë””ë²„ê¹… ì •ë³´ê°€ debug-archiveì— ì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤"
      '''
      
      archiveArtifacts artifacts: 'debug-archive/**', fingerprint: true, allowEmptyArchive: true
    }
    always {
      sh '''
        echo "===================================================="
        echo "ğŸ§¹ ì‘ì—… ê³µê°„ ì •ë¦¬"
        echo "===================================================="
        
        # ì„ì‹œ ë””ë ‰í† ë¦¬ ì •ë¦¬
        rm -rf _build_tmp apk apk-archive debug-archive || true
      '''
      cleanWs()
    }
  }
}