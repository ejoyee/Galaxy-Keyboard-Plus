pipeline {
  agent any

  environment {
    // Android SDK ì„¤ì •
    ANDROID_SDK_ROOT = '/opt/android-sdk'
    ANDROID_HOME     = '/opt/android-sdk'
    PATH             = "${env.PATH}:/opt/android-sdk/cmdline-tools/latest/bin:/opt/android-sdk/platform-tools"
    // Fastlane Firebase App Distribution í† í°
    FIREBASE_TOKEN   = credentials('FIREBASE_TOKEN')
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
        
        // ë¹Œë“œ ì‹œì‘ ë¡œê·¸
        sh '''
          echo "===================================================="
          echo "ğŸš€ ë¹Œë“œ ì‹œì‘: $(date '+%Y-%m-%d %H:%M:%S')"
          echo "ğŸ” ë¹Œë“œ ID: ${BUILD_ID}"
          echo "ğŸ” Git ì»¤ë°‹: ${GIT_COMMIT}"
          echo "ğŸ” ë¸Œëœì¹˜: ${GIT_BRANCH}"
          echo "===================================================="
        '''
      }
    }

    stage('Detect Frontend Changes') {
      steps {
        script {
          def diff = sh(
            script: "git diff --name-only ${env.GIT_PREVIOUS_SUCCESSFUL_COMMIT ?: 'HEAD~1'} ${env.GIT_COMMIT}",
            returnStdout: true
          ).trim()
          
          // ë³€ê²½ íŒŒì¼ ëª©ë¡ ì¶œë ¥
          echo "==== ë³€ê²½ëœ íŒŒì¼ ëª©ë¡ ===="
          echo "${diff}"
          echo "=========================="
          
          // front/frontend/ í•˜ìœ„ íŒŒì¼ ë³€ê²½ì´ ìˆìœ¼ë©´ ë¹Œë“œ
          env.BUILD_FRONTEND = diff.split('\n').any { it.startsWith('front/frontend/') } ? 'true' : 'false'
          echo env.BUILD_FRONTEND=='true'
               ? "â–¶ Frontend ë³€ê²½ ê°ì§€: ë¹Œë“œí•©ë‹ˆë‹¤"
               : "â–¶ Frontend ë³€ê²½ ì—†ìŒ: ìŠ¤í‚µí•©ë‹ˆë‹¤"
        }
      }
    }

    stage('Build & Distribute Frontend') {
      when { expression { env.BUILD_FRONTEND == 'true' } }
      steps {
        // ë””ë ‰í† ë¦¬ êµ¬ì¡° í™•ì¸
        sh '''
          echo "===================================================="
          echo "ğŸ“ ë””ë ‰í† ë¦¬ êµ¬ì¡° í™•ì¸"
          echo "===================================================="
          
          # ì‹œí¬ë¦¿ ë””ë ‰í† ë¦¬ ë§Œë“¤ê¸°
          mkdir -p front/frontend/android/app/keystore
          echo "âœ… front/frontend/android/app/keystore ë””ë ‰í† ë¦¬ ìƒì„± ì™„ë£Œ"
          
          # ë””ë ‰í† ë¦¬ êµ¬ì¡° í™•ì¸
          echo "ğŸ“‚ ì‘ì—… ë””ë ‰í† ë¦¬: $(pwd)"
          
          echo "ğŸ“‚ front ë””ë ‰í† ë¦¬ í™•ì¸:"
          ls -la front || { echo "âŒ front ë””ë ‰í† ë¦¬ê°€ ì—†ìŠµë‹ˆë‹¤"; exit 1; }
          
          echo "ğŸ“‚ front/frontend ë””ë ‰í† ë¦¬ í™•ì¸:"
          ls -la front/frontend || { echo "âŒ front/frontend ë””ë ‰í† ë¦¬ê°€ ì—†ìŠµë‹ˆë‹¤"; exit 1; }
          
          echo "ğŸ“‚ front/frontend/android ë””ë ‰í† ë¦¬ í™•ì¸:"
          ls -la front/frontend/android || { echo "âŒ front/frontend/android ë””ë ‰í† ë¦¬ê°€ ì—†ìŠµë‹ˆë‹¤"; exit 1; }
          
          echo "ğŸ“‚ front/frontend/android/app ë””ë ‰í† ë¦¬ í™•ì¸:"
          ls -la front/frontend/android/app || { echo "âŒ front/frontend/android/app ë””ë ‰í† ë¦¬ê°€ ì—†ìŠµë‹ˆë‹¤"; exit 1; }
          
          # Gemfile í™•ì¸
          echo "ğŸ“‚ Gemfile í™•ì¸:"
          if [ -f "front/frontend/Gemfile" ]; then
            echo "âœ… front/frontend/Gemfile íŒŒì¼ ì¡´ì¬"
            cp front/frontend/Gemfile front/frontend/android/
            echo "âœ… Gemfileì„ android ë””ë ‰í† ë¦¬ë¡œ ë³µì‚¬ ì™„ë£Œ"
          elif [ -f "front/frontend/android/Gemfile" ]; then
            echo "âœ… front/frontend/android/Gemfile íŒŒì¼ ì¡´ì¬"
          else
            echo "âš ï¸ Gemfileì´ ì—†ìŠµë‹ˆë‹¤. ê¸°ë³¸ Gemfile ìƒì„± ì¤‘..."
            cat > front/frontend/android/Gemfile << 'EOL'
source "https://rubygems.org"

gem "fastlane"
gem "fastlane-plugin-firebase_app_distribution"
EOL
            echo "âœ… ê¸°ë³¸ Gemfile ìƒì„± ì™„ë£Œ"
          fi
          
          echo "===================================================="
        '''
        
        // ì‹œí¬ë¦¿ íŒŒì¼ ì¤€ë¹„
        withCredentials([
          file(credentialsId: 'android-release-keystore', variable: 'KEYSTORE_FILE'),
          string(credentialsId: 'KEYSTORE_PASSWORD', variable: 'KEYSTORE_PASSWORD'),
          string(credentialsId: 'KEY_ALIAS', variable: 'KEY_ALIAS'),
          string(credentialsId: 'KEY_PASSWORD', variable: 'KEY_PASSWORD'),
          file(credentialsId: 'google-services-json', variable: 'GOOGLE_SERVICES_JSON'),
          file(credentialsId: 'firebase-service-account', variable: 'FIREBASE_SERVICE_ACCOUNT')
        ]) {
          sh '''
            echo "===================================================="
            echo "ğŸ” ì‹œí¬ë¦¿ íŒŒì¼ ì¤€ë¹„"
            echo "===================================================="
            
            cp "$KEYSTORE_FILE" front/frontend/android/app/keystore/release.keystore
            echo "âœ… Keystore íŒŒì¼ ë³µì‚¬ ì™„ë£Œ"
            
            cp "$GOOGLE_SERVICES_JSON" front/frontend/android/app/google-services.json
            echo "âœ… Google Services JSON íŒŒì¼ ë³µì‚¬ ì™„ë£Œ"
            
            cp "$FIREBASE_SERVICE_ACCOUNT" front/frontend/android/firebase_service_account.json
            echo "âœ… Firebase Service Account íŒŒì¼ ë³µì‚¬ ì™„ë£Œ"
            
            echo "===================================================="
          '''
        }
        
        // Docker ì§ì ‘ ì‹¤í–‰ ë°©ì‹ìœ¼ë¡œ ë³€ê²½ (ì´ë¯¸ì§€ ë¹Œë“œ ì—†ì´)
        sh '''
          echo "===================================================="
          echo "ğŸ³ Docker ì»¨í…Œì´ë„ˆì—ì„œ Android ë¹Œë“œ ì‹¤í–‰"
          echo "===================================================="
          
          # Android ë””ë ‰í† ë¦¬ë¡œ ì´ë™
          cd front/frontend/android
          
          # Fastlane ë””ë ‰í† ë¦¬ í™•ì¸ ë° ìƒì„±
          if [ ! -d "fastlane" ]; then
            echo "âš ï¸ fastlane ë””ë ‰í† ë¦¬ê°€ ì—†ìŠµë‹ˆë‹¤. ê¸°ë³¸ fastlane ì„¤ì • ìƒì„± ì¤‘..."
            mkdir -p fastlane
            cat > fastlane/Fastfile << 'EOL'
default_platform(:android)

platform :android do
  desc "Deploy a new version to Firebase App Distribution"
  lane :release do |options|
    gradle(
      task: "clean assembleRelease"
    )
    firebase_app_distribution(
      app: ENV["FIREBASE_APP_ID"] || "YOUR_FIREBASE_APP_ID",
      groups: options[:groups],
      release_notes: options[:notes],
      firebase_cli_token: ENV["FIREBASE_TOKEN"]
    )
  end
end
EOL
            echo "âœ… ê¸°ë³¸ Fastfile ìƒì„± ì™„ë£Œ"
            
            # Appfile ìƒì„±
            cat > fastlane/Appfile << 'EOL'
json_key_file("firebase_service_account.json")
package_name("com.yourcompany.yourapp") # ì•± íŒ¨í‚¤ì§€ ì´ë¦„ ì„¤ì • í•„ìš”
EOL
            echo "âœ… ê¸°ë³¸ Appfile ìƒì„± ì™„ë£Œ"
          fi
          
          # Docker ì»¨í…Œì´ë„ˆ ì‹¤í–‰
          docker run --rm \
            -v "$(pwd):/app" \
            -w /app \
            -e ANDROID_SDK_ROOT=/opt/android-sdk \
            -e ANDROID_HOME=/opt/android-sdk \
            -e FIREBASE_TOKEN="$FIREBASE_TOKEN" \
            -e KEYSTORE_PASSWORD="$KEYSTORE_PASSWORD" \
            -e KEY_ALIAS="$KEY_ALIAS" \
            -e KEY_PASSWORD="$KEY_PASSWORD" \
            my-android-ci:latest \
            bash -c '
              set -e
              
              echo "======================================================"
              echo "ğŸ“‚ ì‘ì—… ë””ë ‰í† ë¦¬ í™•ì¸:"
              pwd
              ls -la
              
              echo "======================================================"
              echo "ğŸ“¦ gem ë° bundler ì„¤ì¹˜ í™•ì¸:"
              gem install bundler -v 2.4.22 --no-document
              bundler --version
              
              echo "======================================================"
              echo "ğŸ“¦ 1) ì˜ì¡´ì„± ì„¤ì¹˜ ì‹œì‘"
              yarn install
              
              echo "======================================================"
              echo "ğŸ“¦ 2) Bundle ì„¤ì¹˜ ì‹œì‘"
              bundle config set --local path "vendor/bundle"
              bundle install
              
              echo "======================================================"
              echo "ğŸ“¦ 3) Fastlane í”ŒëŸ¬ê·¸ì¸ ì„¤ì¹˜ ì‹œì‘"
              bundle exec fastlane install_plugins
              
              echo "======================================================"
              echo "ğŸ“¦ 4) ë¦´ë¦¬ìŠ¤ ë¹Œë“œ ë° ë°°í¬ ì‹œì‘"
              bundle exec fastlane release groups:"testers" notes:"CI ìë™ ë°°í¬ ë¹Œë“œ"
              
              echo "======================================================"
              echo "âœ… ë¹Œë“œ ì™„ë£Œ"
              
              echo "ğŸ“‚ ë¹Œë“œ ê²°ê³¼ë¬¼ í™•ì¸:"
              find app/build/outputs -name "*.apk" || echo "APK íŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤."
            '
          
          BUILD_RESULT=$?
          
          if [ $BUILD_RESULT -ne 0 ]; then
            echo "âŒ Android ë¹Œë“œ ì‹¤íŒ¨ (ì¢…ë£Œ ì½”ë“œ: $BUILD_RESULT)"
            exit $BUILD_RESULT
          fi
          
          echo "âœ… Android ë¹Œë“œ ì„±ê³µ"
          echo "===================================================="
        '''
      }
    }

    stage('Archive APK') {
      when { expression { env.BUILD_FRONTEND == 'true' } }
      steps {
        sh '''
          echo "===================================================="
          echo "ğŸ“¦ APK ì•„ì¹´ì´ë¸Œ ì‹œì‘"
          echo "===================================================="
          
          # APK íŒŒì¼ ì¡´ì¬ í™•ì¸
          APK_COUNT=$(find front/frontend/android/app/build/outputs -name "*.apk" 2>/dev/null | wc -l || echo 0)
          
          if [ "$APK_COUNT" -gt 0 ]; then
            echo "âœ… $APK_COUNT ê°œì˜ APK íŒŒì¼ ë°œê²¬"
            find front/frontend/android/app/build/outputs -name "*.apk" 2>/dev/null | sed 's/^/   /'
          else
            echo "âŒ APK íŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤"
            echo "ğŸ“‚ ë¹Œë“œ ë””ë ‰í† ë¦¬ í™•ì¸:"
            find front/frontend/android -type d -name "build" 2>/dev/null | sed 's/^/   ë¹Œë“œ ë””ë ‰í† ë¦¬: /'
          fi
          
          echo "===================================================="
        '''
        
        archiveArtifacts artifacts: 'front/frontend/android/app/build/outputs/**/*.apk', fingerprint: true, allowEmptyArchive: true
      }
    }
  }

  post {
    always {
      sh '''
        echo "===================================================="
        echo "ğŸ§¹ ì‘ì—… ê³µê°„ ì •ë¦¬"
        echo "===================================================="
      '''
      cleanWs()
    }
    success {
      sh '''
        echo "===================================================="
        echo "âœ… Frontend CI/CD ì„±ê³µ ğŸ‰"
        echo "===================================================="
      '''
    }
    failure {
      sh '''
        echo "===================================================="
        echo "âŒ Frontend CI/CD ì‹¤íŒ¨ â—"
        echo "===================================================="
      '''
    }
  }
}