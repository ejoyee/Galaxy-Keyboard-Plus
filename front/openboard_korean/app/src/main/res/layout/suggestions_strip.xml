<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/suggestions_strip_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hapticFeedbackEnabled="false"
        android:orientation="horizontal"
        android:soundEffectsEnabled="false">
        <!-- Provide audio and haptic feedback by ourselves based on the keyboard settings.
             We just need to ignore the system's audio and haptic feedback settings. -->

        <ImageButton
            android:id="@+id/suggestions_strip_search_key"
            style="?attr/suggestionWordStyle"
            android:layout_width="@dimen/config_suggestions_strip_edge_key_width"
            android:layout_height="fill_parent"
            android:contentDescription="@string/search"
            android:src="@drawable/ic_search" />
        <!--        <LinearLayout-->
        <!--            android:id="@+id/suggestions_strip"-->
        <!--            android:orientation="horizontal"-->
        <!--            android:maxWidth="0dp"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_weight="0"-->
        <!--            android:visibility="gone"-->
        <!--            android:hapticFeedbackEnabled="false"-->
        <!--            android:soundEffectsEnabled="false" />-->
        <LinearLayout
            android:id="@+id/suggestions_strip_input_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/suggestions_strip_search_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:cursorVisible="true"

                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/search_hint"
                android:imeOptions="actionSearch|flagNoExtractUi"
                android:inputType="text"
                android:maxLines="1" />

            <ImageButton
                android:id="@+id/suggestions_strip_send_key"
                style="?attr/suggestionWordStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/send"
                android:src="@drawable/ic_send" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/suggestions_strip_other_key"
            style="?attr/suggestionWordStyle"
            android:layout_width="@dimen/config_suggestions_strip_edge_key_width"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:contentDescription="@string/more_keys_strip_description" />
        <!-- Provide audio and haptic feedback by ourselves based on the keyboard settings.
             We just need to ignore the system's audio and haptic feedback settings. -->
        <ImageButton
            android:id="@+id/suggestions_strip_voice_key"
            style="?attr/suggestionWordStyle"
            android:layout_width="@dimen/config_suggestions_strip_edge_key_width"
            android:layout_height="fill_parent"
            android:contentDescription="@string/spoken_description_mic" />

        <ImageButton
            android:id="@+id/suggestions_strip_clipboard_key"
            style="?attr/suggestionWordStyle"
            android:layout_width="@dimen/config_suggestions_strip_edge_key_width"
            android:layout_height="fill_parent" />

        <LinearLayout
            android:id="@+id/suggestions_strip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="false"
            android:maxWidth="100dp"
            android:orientation="horizontal"
            android:soundEffectsEnabled="false" />
    </LinearLayout>
    <!-- 기존 RelativeLayout 맨 아래쪽에 추가 -->
    <TextView
        android:id="@+id/search_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:padding="6dp"
        android:maxLines="6"
        android:scrollbars="vertical"
        android:visibility="gone"/>

</merge>
