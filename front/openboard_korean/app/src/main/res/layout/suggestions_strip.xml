<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/suggestions_strip_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hapticFeedbackEnabled="false"
        android:orientation="horizontal"
        android:soundEffectsEnabled="false">
        <!-- Provide audio and haptic feedback by ourselves based on the keyboard settings.
             We just need to ignore the system's audio and haptic feedback settings. -->

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/suggestions_strip_search_key"
            style="?attr/suggestionWordStyle"
            app:lottie_autoPlay="false"
            app:lottie_fileName="search_loading.json"
            app:lottie_loop="false"
            android:layout_width="@dimen/config_suggestions_strip_edge_key_width"
            android:layout_height="match_parent"
            android:contentDescription="@string/search" />

        <!-- keyword 검색 버튼 -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/suggestions_strip_keyword_key"
            style="?attr/suggestionWordStyle"
            app:lottie_autoPlay="false"
            app:lottie_fileName="keyword_highlight.json"
            app:lottie_loop="true"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:contentDescription="@string/keyword_button" />

        <!-- ImageButton(search_key) 아래나 옆에 -->
        <Button
            android:id="@+id/suggestions_strip_search_status"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/suggestions_strip_input_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/suggestions_strip_search_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:layout_marginHorizontal="8dp"
                android:minWidth="120dp"
                android:imeOptions="actionSearch|flagNoExtractUi"
                android:inputType="text"
                android:maxLines="1" />

            <ImageButton
                android:id="@+id/suggestions_strip_send_key"
                style="?attr/suggestionWordStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/send"
                android:src="@drawable/ic_send" />

            <ImageButton
                android:id="@+id/suggestions_strip_copy_key"
                style="?attr/suggestionWordStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_copy" />

        </LinearLayout>

        <!--        <ImageButton-->
        <!--            android:id="@+id/suggestions_strip_other_key"-->
        <!--            style="?attr/suggestionWordStyle"-->
        <!--            android:layout_width="@dimen/config_suggestions_strip_edge_key_width"-->
        <!--            android:layout_height="fill_parent"-->
        <!--            android:layout_weight="0"-->
        <!--            android:contentDescription="@string/more_keys_strip_description" />-->
        <!-- Provide audio and haptic feedback by ourselves based on the keyboard settings.
             We just need to ignore the system's audio and haptic feedback settings. -->
        <ImageButton
            android:id="@+id/suggestions_strip_voice_key"
            style="?attr/suggestionWordStyle"
            android:layout_width="@dimen/config_suggestions_strip_edge_key_width"
            android:layout_height="fill_parent"
            android:contentDescription="@string/spoken_description_mic" />

        <ImageButton
            android:id="@+id/suggestions_strip_clipboard_key"
            style="?attr/suggestionWordStyle"
            android:layout_width="@dimen/config_suggestions_strip_edge_key_width"
            android:layout_height="fill_parent" />

        <!-- ① 사진 바: 기본적으로 GONE -->
        <HorizontalScrollView
            android:id="@+id/suggestions_strip_photo_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="4dp">
            <LinearLayout
                android:id="@+id/photo_bar_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/suggestions_strip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="false"
            android:maxWidth="100dp"
            android:orientation="horizontal"
            android:soundEffectsEnabled="false" />
    </LinearLayout>
    <!-- 기존 RelativeLayout 맨 아래쪽에 추가 -->
    <TextView
        android:id="@+id/search_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="6"
        android:padding="6dp"
        android:scrollbars="vertical"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="gone" />
</merge>
