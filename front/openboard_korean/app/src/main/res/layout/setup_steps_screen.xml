<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ── 헤더 + 게이지 한 덩어리 ───────────────────────── -->
    <LinearLayout
        android:id="@+id/header_container"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp">

        <include layout="@layout/setup_steps_title"/>

        <org.dslul.openboard.inputmethod.latin.setup.StepGaugeView
            android:id="@+id/setup_step_gauge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gauge_height"
            android:layout_marginTop="8dp"
            app:sgv_totalSteps="7"
            app:sgv_currentStep="0"/>
    </LinearLayout>

    <!-- ── 단계 카드 영역만 슬라이드 대상 ───────────────── -->
    <FrameLayout
        android:id="@+id/step_content_pane"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="72dp"
        app:layout_constraintBottom_toTopOf="@id/cta_container"
        >

        <include android:id="@+id/setup_step1" layout="@layout/setup_step"/>
        <include android:id="@+id/setup_step2" layout="@layout/setup_step"/>
        <include android:id="@+id/setup_step3" layout="@layout/setup_step"/>
        <include android:id="@+id/setup_step4" layout="@layout/setup_step"/>
        <include android:id="@+id/setup_step5" layout="@layout/setup_step"/>
        <include android:id="@+id/setup_step6" layout="@layout/setup_step"/>
        <include android:id="@+id/setup_step7" layout="@layout/setup_step"/>
    </FrameLayout>

    <!-- ── CTA 버튼: Toss 스타일 ─────────────────────────── -->
    <LinearLayout
        android:id="@+id/cta_container"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/setup_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TossCTA"
        android:text="@string/setup_next_action"/>

        <Button
            android:id="@+id/setup_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TossCTA.Outline"
            android:layout_marginStart="8dp"
            android:text="@string/setup_finish_action"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
